<% provide(:title, "Lista de reds") %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Token</th>
      <th>Nombre</th>
      <th>Nombre display</th>
      <th>Cliente</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reds.each do |red| %>
      <tr>
        <td><%= red.tipo %></td>
        <td><%= red.token %></td>
        <td><%= red.nombre %></td>
        <td><%= red.nombre_display %></td>
        <td><%= red.cliente %></td>
        <td>
          <div class="btn-group">
            <%= link_to red, class: "btn btn-xs btn-default" do %>
              <%= fa_icon("eye", text: "Ver") %>
            <% end %>
            <%= link_to edit_red_path(red), class: "btn btn-xs btn-default" do %>
              <%= fa_icon("pencil", text: "Editar") %>
            <% end %>
            <%= link_to red, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Â¿Seguro de eliminar este red?" } do %>
              <%= fa_icon("trash-o", text: "Eliminar") %>
            <% end %>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_red_path, class: "btn btn-default" do %>
  <%= fa_icon("plus", text: "Nuevo Red") %>
<% end %>
