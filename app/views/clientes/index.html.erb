
<% provide(:title, "Lista de clientes") %>


<div class="post_test">
  <p><%= @test_result %></p>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th></th>
    <th>Nombre</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @clientes.each do |cliente| %>
    <tr>

      <td>
        <%= link_to cliente do %>
          <%= cliente.nombre %>
        <% end %>
      </td>
      <td>
        <div class="btn-group">
          <%= link_to cliente, class: "btn btn-xs btn-default" do %>

            <%= fa_icon("eye", text: "Ver") %>
          <% end %>
          <%= link_to edit_cliente_path(cliente), class: "btn btn-xs btn-default" do %>
            <%= fa_icon("pencil", text: "Editar") %>
          <% end %>
          <%= link_to cliente, class: "btn btn-xs btn-danger", method: :delete, data: {confirm: "Â¿Seguro de eliminar este cliente?"} do %>
            <%= fa_icon("trash-o", text: "Eliminar") %>
          <% end %>
        </div>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to new_cliente_path, class: "btn btn-default" do %>
  <%= fa_icon("plus", text: "Nuevo Cliente") %>
<% end %>
