
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Nombre display</th>

      <th>Token</th>
      <th>Nombre</th>
      <th>Tipo</th>
      <th>Cliente</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @redes.each do |red| %>
      <tr>
        <td>
          <% imagen=red.tipo==0?"https://www.facebook.com/images/fb_icon_325x325.png":"https://instagram-brand.com/wp-content/uploads/2016/11/app-icon2.png" %>
          <%= image_tag(imagen, :alt => "rss feed", class:'icono-social') %>
        </td>
        <td>
          <%= link_to red do %>
            <%= red.nombre_display %>

          <% end %>
        </td>
        <td><%= red.token.blank?? '---' : red.token[0..10] + '...' %></td>
        <td><%= red.nombre %></td>
        <td>
          <%= red.tipo_cast %>
        </td>
        <td><%= red.cliente.nombre %></td>
        <td>
          <div class="btn-group">
            <%= link_to red, class: "btn btn-xs btn-default" do %>
              <%= fa_icon("eye", text: "Ver") %>
            <% end %>
            <%= link_to edit_red_path(red), class: "btn btn-xs btn-default" do %>
              <%= fa_icon("pencil", text: "Editar") %>
            <% end %>
            <%= link_to red, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Â¿Seguro de eliminar este red?" } do %>
              <%= fa_icon("trash-o", text: "Eliminar") %>
            <% end %>
          </div>
      </tr>
    <% end %>
  </tbody>
</table>
