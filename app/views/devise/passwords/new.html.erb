<% provide(:title, "¿Olvidaste tu contraseña?") %>

<!-- <h2>¿Olvidaste tu contraseña?</h2> -->
<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <!-- <%= f.label :email %><br /> -->
    <%= f.email_field :email, autofocus: true, label: "Email" %>
  </div>

  <div class="actions">
    <%= f.submit "Envíenme las instrucciones de recuperación de la contraseña" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
