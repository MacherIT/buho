<% provide(:title) do %>
  Post #<%= @post.id %>
<% end %>


<table class="table table-bordered">
  <tbody>
    <tr>
      <th class="col-sm-2">Hora pub</th>
      <td><%= @post.hora_pub %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Titulo</th>
      <td><%= @post.titulo %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Texto</th>
      <td><%= @post.texto %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Imagen</th>
      <td><%= image_tag @post.imagen %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Publicado</th>
      <td><%= @post.publicado %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Red</th>
      <td><%= @post.red.nombre %></td>
    </tr>
  </tbody>
</table>

