<% provide(:title) do %>
  Post #<%= @post.id %> -
  <%= @post.titulo %>
<% end %>


<table class="table table-bordered">
  <tbody>
    <tr>
      <th class="col-sm-2">Hora pub</th>
      <td><%= @post.hora_pub %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Titulo</th>
      <td><%= @post.titulo %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Texto</th>
      <td><%= @post.texto %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Imagen</th>

      <td>
        <% if @post.imagen.attached? %>
          <p>
            <strong>Imagen:</strong>
            <br>
            <%= image_tag @post.imagen , class:'imagen'%>
          </p>
        <% end %>
      </td>
        <%# TODO: Usar variants %>
    </tr>
    <tr>
      <th class="col-sm-2">Publicado</th>
      <td><%= @post.publicado?? 'Sí' : "No" %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Aprobado</th>
      <td><%= @post.approved? ? 'Sí' : "No" %></td>
    </tr>
    <tr>
      <th class="col-sm-2">Red</th>
      <td><%= @post.red.nombre %></td>
    </tr>
  </tbody>
</table>

<p>
  <%= link_to "Editar", edit_post_path(@post), class: "btn btn-primary" %>
  <%= link_to "Atrás", :back, class: "btn btn-link" %>
</p>
